@page
@model WebApp.Pages.Transactions.IndexModel

@{
    ViewData["Title"] = "Tehingute nimekiri";
}

<h1>Tehingute nimekiri</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Summa</th>
            <th>Tüüp</th>
            <th>Arve</th>
            <th>Kirjeldus</th>
            <th>Kuupäev</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.MoneyTransactions != null && Model.MoneyTransactions.Any())
        {
            @foreach (var item in Model.MoneyTransactions)
            {
                <tr>
                    <td>@item.Amount.ToString("C")</td>
                    <td>@item.Type</td>
                    <td>
                        <a asp-page="/Receipts/Details" asp-route-id="@item.ReceiptId">Arve #@item.ReceiptId</a>
                    </td>
                    <td>@item.Description</td>
                    <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Tehinguid ei leitud.</td>
            </tr>
        }
        </tbody>
    </table>
</div>